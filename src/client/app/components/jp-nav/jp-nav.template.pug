doctype html

nav#navbar
  #page-title Jeremy Pridemore

  #not-logged-in(v-if="!user")
    a#register(@click="registering = true") register
    jp-modal(v-if="registering", @close="registering = false")
      .header(slot="title") Register
      form#register-form(slot="content", @click.stop, @submit.prevent="register")
        .form-group
          label(for="user-name-register") User Name:
          input#user-name-register(type="text", placeholder="Enter a user name", v-model="registerForm.userName" autofocus)
        .form-group
          label(for="password-register") Password:
          input#password-register(type="password", v-model="registerForm.password")
        .form-group
          label(for="email-register") Email:
          input#email-register(type="email", v-model="registerForm.email")
        .form-group
          input#register-submit(type="submit")

    .vertical-seperator

    a#login(@click="loggingIn = true") login
    jp-modal(v-if="loggingIn", @close="loggingIn = false")
      .header(slot="title") Login
      form#login-form(slot="content", @click.stop, @submit.prevent="login")
        .form-group
          label(for="user-name-login") User Name:
          input#user-name-login(type="text", placeholder="Enter a user name", v-model="loginForm.userName" autofocus)
        .form-group
          label(for="password-login") Password:
          input#password-login(type="password", v-model="loginForm.password")
        .form-group
          input#login-submit(type="submit")

  #logged-in(v-else)
    #current-user {{ user.userName }}
    .vertical-seperator
    a#logout(@click="logout") logout
