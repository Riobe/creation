doctype html

.navbar.navbar-default
  .container-fluid
    .navbar-header
      a.navbar-brand ngEvents
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li
          a(href="" "[routerLink]"="['/events']" routerLinkActive="active" "[routerLinkActiveOptions]"="{exact:true}") All Events
        li
          a(href="" "[routerLink]"="['/events/new']" routerLinkActive="active") Create Event
        li.dropdown
          a.dropdown-toggle(href="#", data-toggle="dropdown")
            | Events
            span.caret
          ul.dropdown-menu
            li
              a(href="" "[routerLink]"="['/event', 1]" routerLinkActive="active") Angular Connect
        li
          a(href="" "[routerLink]"="['/kendo']" routerLinkActive="active") Kendo UI
        li
          button.btn.btn-primary Example
      .navbar-header.navbar-right
        ul.nav.navbar-nav
          li
            a("*ngIf"="!authService.isAuthenticated()" "[routerLink]"="['user/login']") Login
            a("*ngIf"="authService.isAuthenticated()" "[routerLink]"="['user/profile']")
              | Welcome {{authService.currentUser?.firstName}}
      form#searchForm.navbar-form.navbar-right("(ngSubmit)"="searchSessions(searchTerm)")
        .form-group
          input.form-control(type="text", placeholder="Search Sessions" "[(ngModel)]"="searchTerm" name="searchTerm")
        button.btn.btn-default(modal-trigger="search-results") Search

  simple-modal(title="Matching Sessions" elementId='search-results' closeOnBodyClick="true")
    .list-group
      a.list-group-item("*ngFor"="let session of foundSessions" "[routerLink]"="['/event', session.eventId]")
        | {{session.name}}
